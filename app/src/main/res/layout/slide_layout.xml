<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/cameraslide"
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="83dp"
        app:srcCompat="@drawable/open_cam" />

    <TextView
        android:id="@+id/TitleCam"
        android:layout_width="292dp"
        android:layout_height="57dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="230dp"
        android:layout_alignBottom="@+id/cameraslide"
        android:text="Upload or Take a Picture!"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@color/white"
        android:textSize="21sp"
        android:visibility="visible" />

    <TextView
        android:id="@+id/desc"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="135dp"
        android:foregroundGravity="center_horizontal"
        android:textColor="@color/transwhite"
        android:textSize="15sp"
        tools:layout_height="wrap_content"
        tools:lineSpacingExtra="8sp"
        tools:text="If you are having pictures just upload from the gallery else just click a picture on your own!" />
</RelativeLayout>
